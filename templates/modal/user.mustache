{{!
    @template block_enrol_student/modal/user

    This template renders the user details.

    Example context (json):
    {
        "user" [
            "id" :123,
            "email" : s1@example.com,
            "firstname" " student_1,
            "lastname" : student_11
              ]
    }
  }}

<form>
    {{#user}}
        <label for="id">User Id:</label> <label for="idvalue">{{id}}</label> <br>
        <label for="email">Email:</label> <label for="emailvalue">{{email}}</label> <br>
        <label for="fname">First name:</label> <label for="fnamevalue">{{firstname}}</label> <br>
        <label for="lname">Last name:</label> <label for="lastevalue">{{lastname}}</label> <br>
    {{/user}}
</form>